{
  "source": {
    "include": ["src"],
    "includePattern": "\\.(jsx|js|ts|tsx)$",
    "excludePattern": "(node_modules/|docs)"
  },
  "plugins": [
    "node_modules/jsdoc-babel"
  ],
  "babel": {
    "extensions": ["js", "jsx", "ts", "tsx"],
    "ignore": ["**/*.(test|spec).ts"],
    "babelrc": false,
    "presets": [
      ["@babel/preset-env", { "targets": { "node": true } }],
      "@babel/preset-typescript",
      "@babel/preset-react"
    ]
  },
  "opts": {
    "recurse": true,
    "destination": "./docs",
    "template": "templates/default"
  }
} 